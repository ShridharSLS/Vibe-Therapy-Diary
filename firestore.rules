rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to diaries collection
    match /diaries/{document} {
      allow read, write: if true;
    }
    
    // Allow read/write access to cards collection
    match /cards/{document} {
      allow read, write: if true;
    }
    
    // Allow read/write access to situations collection
    match /situations/{document} {
      allow read, write: if true;
    }
    
    // Allow read/write access to beforeItems collection
    match /beforeItems/{document} {
      allow read, write: if true;
    }
    
    // Allow read/write access to afterItems collection
    match /afterItems/{document} {
      allow read, write: if true;
    }
    
    // For production, you might want more restrictive rules like:
    // match /diaries/{diaryId} {
    //   allow read, write: if request.auth != null;
    // }
    // match /cards/{cardId} {
    //   allow read, write: if request.auth != null;
    // }
    // match /situations/{situationId} {
    //   allow read, write: if request.auth != null;
    // }
    // match /beforeItems/{beforeItemId} {
    //   allow read, write: if request.auth != null;
    // }
    // match /afterItems/{afterItemId} {
    //   allow read, write: if request.auth != null;
    // }
  }
}
